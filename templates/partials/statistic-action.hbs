<div class="statistic-wrapper item-wrapper">
    <div class="item statistic{{#if isProficient}} proficient{{/if}}" data-item-uuid="{{sourceId}}"
        data-statistic="{{statistic}}" {{#if (and isProficient (not hasVariants))}}draggable="true"
        {{/if}} data-filter-value="{{filterValue}}">
        {{> (@root.partial 'item-image') this}}
        <div class="name">
            <a data-action="item-description">
                {{label}} {{{actionGlyph actionCost}}}
            </a>
        </div>
        <div class="controls">
            {{#if (and isProficient (not variants.size))}}
            <a data-action="roll-statistic-action" data-statistic="{{statistic}}"
                data-key="{{key}}">
                <i class="fa-solid fa-dice-d20"></i>
            </a>
            {{/if}}
        </div>
    </div>
    {{#if (and isProficient variants.size)}}
    <div class="variants">
        {{#each variants as |variant|}}
        <div class="variant" data-filter-value="{{variant.filterValue}}"
            data-action="roll-statistic-action" data-statistic="{{../statistic}}"
            data-key="{{../key}}" data-variant="{{variant.slug}}" {{#unless variant.map
            includeZero=true}} draggable="true" {{/unless}}>
            {{{variant.label}}}
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>